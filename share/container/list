		distro_does_not_support
		;;
	*)
		#touch ~/.ALPINELINUXDetectionFILE
		DISTRO_NAME='apertis'
		OLD_STABLE_VERSION='v2019.2'
		check_the_latest_distro_version
		;;
	esac
}
