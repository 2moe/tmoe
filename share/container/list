	case "${LINUX_DISTRO}" in
	Android)
		case ${TMOE_CHROOT} in
		true) ;;
		*)
			cat <<-EOF
				${RED}WARNINGÔºÅ${RESET}Ê£ÄÊµãÂà∞ÊÇ®‰ΩøÁî®ÁöÑÊòØAndroidÁ≥ªÁªü„ÄÇ
				Êú¨ÈïúÂÉèÊîØÊåÅGNU/LinuxÁöÑproot/chrootÂÆπÂô®,‰ΩÜ‰∏çÊîØÊåÅtermux-proot„ÄÇ
				ÁªèÊµãËØïÂú®termuxÁöÑprootÁéØÂ¢É‰∏ãÂ≠òÂú®Êó†Ê≥ïÊ£ÄÁ¥¢Âà∞ËΩØ‰ª∂ÂåÖÁöÑÊÉÖÂÜµÔºå‰ΩÜGNU/LinuxÁöÑprootÂç¥‰∏çÂ≠òÂú®Ê≠§ÈóÆÈ¢ò„ÄÇ
				Ëã•ÊÇ®ÊâßÊÑèË¶ÅÂÆâË£ÖOpenSUSE tumbleweed,ÂàôËØ∑ÊåâÂõûËΩ¶ÈîÆ„ÄÇ
			EOF
			do_you_want_to_continue
			;;
		esac
		;;
	esac
}
