	TMOE_LANG_HALF=$(echo ${TMOE_LANG} | cut -d '.' -f 1)
	TMOE_LANG_QUATER=$(echo ${TMOE_LANG} | cut -d '.' -f 1 | cut -d '_' -f 1)

