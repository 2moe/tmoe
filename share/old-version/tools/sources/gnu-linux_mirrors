######################
ping_mirror_sources_list_count_3() {
    printf "%s\n" "${YELLOW}${SOURCE_MIRROR_STATION}${RESET}"
    printf "%s\n" "${BLUE}${SOURCE_MIRROR_STATION_NAME}${RESET}"
    ping -c 3 "${SOURCE_MIRROR_STATION}" | grep -E 'avg|time.*ms' --color=auto
    printf "%s\n" "---------------------------"
}
