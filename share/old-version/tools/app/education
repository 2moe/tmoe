#############
check_tmoe_study_materials() {
    if [ "${WINDOWS_DISTRO}" = 'WSL' ]; then
        DOWNLOAD_FOLDER='/mnt/c/Users/Public/Documents'
    else
        DOWNLOAD_FOLDER="${HOME}/sd/Download/Documents"
    fi

    if [ ! -d "${DOWNLOAD_FOLDER}" ]; then
        mkdir -pv ${DOWNLOAD_FOLDER}
    fi
    cd ${DOWNLOAD_FOLDER}
    if [ -e ${DOWNLOAD_FILE_NAME} ]; then
        if (whiptail --title "æ£€æµ‹åˆ°åŽ‹ç¼©åŒ…å·²ä¸‹è½½,è¯·é€‰æ‹©æ‚¨éœ€è¦æ‰§è¡Œçš„æ“ä½œï¼" --yes-button 'è§£åŽ‹uncompress' --no-button 'é‡ä¸‹DL again' --yesno "Detected that the file has been downloaded.\nDo you want to unzip it, or download it again?\næ‚¨æƒ³è¦ç›´æŽ¥è§£åŽ‹è¿˜æ˜¯é‡æ–°ä¸‹è½½ï¼Ÿ" 0 0); then
            unzip_tmoe_study_file
        else
            git_clone_tmoe_study_file
        fi
    else
        git_clone_tmoe_study_file
    fi
}
###############
unzip_tmoe_study_file() {
    tar -Jxvf ${DOWNLOAD_FILE_NAME}
    printf "%s\n" "æ–‡ä»¶å·²ä¿å­˜è‡³${BLUE}${DOWNLOAD_FOLDER}${RESET}"
    if [ "${WINDOWS_DISTRO}" = 'WSL' ]; then
        printf "%s\n" "æ‚¨å¯ä»¥ä½¿ç”¨windows10èµ„æºç®¡ç†å™¨æ‰“å¼€${BLUE}C:\Users\Public\Documents${RESET}"
    fi
}
##############
git_clone_tmoe_study_file() {
    cd /tmp
    TMOE_TRUE_TEMP_FOLDER='.TMOE_STUDY_MATERIALS_TEMP_FOLDER'
    mkdir -pv ${TMOE_TRUE_TEMP_FOLDER}
    cd ${TMOE_TRUE_TEMP_FOLDER}

    TMOE_TEMP_FOLDER=".${DOWNLOAD_FILE_NAME}_TEMP_FOLDER_01"

    git clone \
        --depth=1 \
        -b ${BRANCH_NAME} \
        ${TMOE_LINUX_STUDY_REPO_01} \
        ${TMOE_TEMP_FOLDER}

    cd ${TMOE_TEMP_FOLDER}
    mv .study_* ..
    cd ..
    cat .study_* >${DOWNLOAD_FILE_NAME}
    mv -f ${DOWNLOAD_FILE_NAME} ${DOWNLOAD_FOLDER}
    cd ../
    rm -rvf ${TMOE_TRUE_TEMP_FOLDER}
    cd ${DOWNLOAD_FOLDER}
    unzip_tmoe_study_file
}
#########################
download_2013_to_2019_cet4_and_6_exam_paper() {
    TMOE_LINUX_STUDY_REPO_01='https://gitee.com/ak2/cet.git'
    BRANCH_NAME='2019'
    DOWNLOAD_FILE_NAME='cet.tar.xz'
    check_tmoe_study_materials
}
