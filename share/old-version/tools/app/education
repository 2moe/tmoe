tmoe_mathematics_menu() {
    RETURN_TO_WHERE='tmoe_mathematics_menu'
    DEPENDENCY_01=''
    TMOE_APP=$(whiptail --title "mathematics" --menu \
        "Which software do you want to installï¼Ÿ" 0 50 0 \
        "1" "geogebra(ç»“åˆäº†â€œå‡ ä½•â€ã€â€œä»£æ•°â€ä¸Žâ€œå¾®ç§¯åˆ†â€)" \
        "2" "octave(GNU Octaveè¯­è¨€,ç”¨äºŽæ•°å€¼è®¡ç®—)" \
        "3" "scilab(ç”¨äºŽæ•°å€¼è®¡ç®—çš„ç§‘å­¦è½¯ä»¶åŒ…)" \
        "4" "freemat(ç§‘å­¦è®¡ç®—è½¯ä»¶,ç±»ä¼¼äºŽMatlab)" \
        "5" "maxima(æ•°å­¦è½¯ä»¶,ç±»ä¼¼äºŽMathematica)" \
        "0" "ðŸŒš Return to previous menu è¿”å›žä¸Šçº§èœå•" \
        3>&1 1>&2 2>&3)
