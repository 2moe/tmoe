network_node_menu_01_cn() {
    NETWORK_NODE=$("${TUI_BIN:-whiptail}" --title "NETWORK NODE" --menu "Please choose a network node\nè¯·é€‰æ‹©ç½‘ç»œèŠ‚ç‚¹" 0 50 0 \
        "1" "Azure_CN" \
        "2" "Tmoe_US" \
        "3" "Azure_US" \
        3>&1 1>&2 2>&3)
    ##############################
    case "${NETWORK_NODE}" in
    0 | "") ${RETURN_TO_WHERE} ;;
    1)
        NODE_NAME='node01-azure'
        NODE_URL="${NODE01_URL}"
        ;;
    2)
        NODE_NAME='node02-tmoe'
        NODE_URL="${NODE02_URL}"
        ;;
    3)
        NODE_NAME='node03-azure'
        NODE_URL="${NODE03_URL}"
        ;;
    esac
}
