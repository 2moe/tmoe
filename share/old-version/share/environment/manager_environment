if_return_to_where_no_empty() {
    case ${RETURN_TO_WHERE} in
    "") tmoe_manager_main_menu ;;
    *) ${RETURN_TO_WHERE} ;;
    esac
}
do_you_want_to_skip() {
    local Return_en="skip"
    local Return_zh="è·³è¿‡"
    printf "%s\n" "${YELLOW}Do you want to ${BLUE}continue?${PURPLE}[Y/n]${RESET}"
    printf "%s\n" "Press ${GREEN}enter${RESET} to ${BLUE}continue${RESET},type ${YELLOW}n${RESET} to ${BLUE}${Return_en}.${RESET}"
    case ${TMOE_LANG} in
    zh_*UTF-8) printf "%s\n" "æŒ‰${GREEN}å›žè½¦é”®${RESET}${BLUE}ç»§ç»­${RESET}ï¼Œè¾“${YELLOW}n${RESET}${BLUE}${Return_zh}${RESET}" ;;
    esac
    read -r opt
    case $opt in
    y* | Y* | "") return 0 ;;
    n* | N*)
        printf "%s\n" "skipped."
        return 1
        ;;
    *)
        printf "%s\n" "Invalid choice. skipped."
        return 1
        ;;
    esac
}

do_you_want_to_continue() {
    local Return_en="return"
    local Return_zh="è¿”å›ž"

    printf "%s\n" "${YELLOW}Do you want to ${BLUE}continue?${PURPLE}[Y/n]${RESET}"
    printf "%s\n" "Press ${GREEN}enter${RESET} to ${BLUE}continue${RESET},type ${YELLOW}n${RESET} to ${BLUE}${Return_en}.${RESET}"
    case ${TMOE_LANG} in
    zh_*UTF-8) printf "%s\n" "æŒ‰${GREEN}å›žè½¦é”®${RESET}${BLUE}ç»§ç»­${RESET}ï¼Œè¾“${YELLOW}n${RESET}${BLUE}${Return_zh}${RESET}" ;;
    esac
    read -r opt
    case $opt in
    y* | Y* | "") ;;
    n* | N*)
        printf "%s\n" "skipped."
        if_return_to_where_no_empty
        ;;
    *)
        printf "%s\n" "Invalid choice. skipped."
        if_return_to_where_no_empty
        ;;
    esac
}
