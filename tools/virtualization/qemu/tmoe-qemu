	RETURN_TO_WHERE='tmoe_qemu_disk_manager_02'
	TMOE_VIRTUALIZATION=$(
		whiptail --title "${BLK_DEVICE} MANAGER" --menu "ÊÇ®ÊÉ≥Ë¶ÅÂØπ${BLK_DEVICE}ËøõË°å‰ªÄ‰πàÊìç‰Ωú" 0 0 0 \
			"1" "üíΩ choose a file ÈÄâÊã©Á£ÅÁõòÊñá‰ª∂" \
